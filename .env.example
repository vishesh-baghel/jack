AI_GATEWAY_API_KEY=

LANGFUSE_SECRET_KEY=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_BASE_URL=

# Neon Database URLs
# DATABASE_URL: Pooled connection for serverless (runtime queries) - has "-pooler" in hostname
# DATABASE_URL_UNPOOLED: Direct connection for migrations - without "-pooler"
DATABASE_URL=postgresql://user:password@ep-xxx-pooler.region.aws.neon.tech/dbname?sslmode=require
DATABASE_URL_UNPOOLED=postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require

# Twitter Scraping APIs
# TwitterAPI.io (Primary, Cost-effective: $0.00015/tweet)
# Get your API key from https://twitterapi.io
TWITTERAPI_IO_KEY=your_twitterapi_io_key_here

# Apify (Backup, kept for future use)
# Get your API key from https://console.apify.com/account/integrations
APIFY_API_KEY=your_apify_api_key_here

# Cron Job Authentication
# Generate a random secret for authenticating cron jobs
CRON_SECRET=your_random_secret_for_cron_auth

# Signup Feature Flag
# Leave unset or set to 'true' to allow signup when no owner exists (recommended for fresh deployments)
# Set to 'false' to disable signup completely (after creating your account)
# If unset, signup is automatically disabled once an owner account exists
ALLOW_SIGNUP=
